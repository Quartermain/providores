	<languages folder="languages/site">
		<language tag="en-GB">en-GB/en-GB.com_mijoshop.ini</language>
	</languages>
	
	<files folder="site">
		<filename>index.html</filename>
		<filename>mijoshop.php</filename>
		<filename>router.php</filename>
		<folder>assets</folder>
		<folder>mijoshop</folder>
		<folder>views</folder>
	</files>
	
	<administration>
		<menu img="components/com_mijoshop/assets/images/icon-16-mijoshop.png">COM_MIJOSHOP</menu>
		<submenu>
	    	<menu link="option=com_mijoshop" img="components/com_mijoshop/assets/images/icon-16-mijoshop.png">COM_MIJOSHOP_DASHBOARD</menu>
	    	<menu link="option=com_mijoshop&amp;route=setting/store" img="components/com_mijoshop/assets/images/icon-16-mijoshop-settings.png">COM_MIJOSHOP_SETTINGS</menu>
